<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#3b5357" />
             <gradient  android:angle="-90"  android:startColor="#67d1f1" android:endColor="#576f75"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#69d6e9" />
             <solid  android:color="#0c8bac"/>
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#3b5357" />
             <gradient  android:angle="-90"  android:startColor="#6d8b93" android:endColor="#3aafce" />
         </shape>
     </item>
</selector>